# Server Configuration
PORT=3001
NODE_ENV=development
LOG_LEVEL=info

# Internal API Authentication
INTERNAL_API_KEY=your-secure-internal-api-key-here

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Provider API Configuration
TMDB_API_KEY=your-tmdb-api-key
TMDB_API_URL=https://api.themoviedb.org/3

# Trakt API Configuration
TRAKT_CLIENT_ID=your-trakt-client-id
TRAKT_CLIENT_SECRET=your-trakt-client-secret
TRAKT_API_URL=https://api.trakt.tv

# Proxy Configuration
PROXY_URLS=http://proxy1.example.com:8080,http://proxy2.example.com:8080,http://proxy3.example.com:8080
PROXY_ROTATION_INTERVAL=300000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://your-frontend-domain.com

# JWT Configuration
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=15m

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# WebSocket Configuration
WS_PORT=3002
WS_MAX_CONNECTIONS=1000
WS_PING_TIMEOUT=60000
WS_PING_INTERVAL=25000
WS_MAX_HTTP_BUFFER_SIZE=1e6  # 1MB

# Watch Together Configuration
WATCH_TOGETHER_MAX_PARTICIPANTS=10
WATCH_TOGETHER_ROOM_CLEANUP_INTERVAL=86400000  # 24 hours in milliseconds
WATCH_TOGETHER_SYNC_THRESHOLD=0.5  # seconds
WATCH_TOGETHER_HEARTBEAT_INTERVAL=30000  # 30 seconds
WATCH_TOGETHER_RECONNECT_ATTEMPTS=5
WATCH_TOGETHER_RECONNECT_DELAY=1000  # 1 second

# Healthchecks.io
HEALTHCHECKS_IO_URL=https://hc-ping.com/your-uuid

# Logging
LOG_FILE=logs/app.log
