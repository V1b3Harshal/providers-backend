  "description": "Production-ready backend microservice for streaming provider management and watch-together functionality",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node --max-old-space-size=256 --optimize-for-size --gc-interval=100 dist/server.js",
