    "@fastify/swagger-ui": "^5.2.3",
    "@onesignal/node-onesignal": "^5.3.1-beta1",
    "@sentry/node": "^10.23.0",
    "@supabase/supabase-js": "^2.83.0",
    "axios": "^1.13.2",
    "bull": "^4.16.5",
    "dotenv": "^16.6.1",
    "fastify": "^5.6.1",
    "helmet": "^7.1.0",
    "redis": "^4.7.1",
    "socket.io": "^4.7.5",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
